html
  height:100%
body
  margin:0px;
  padding:0px;
  font: 1em 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3','Meiryo', 'メイリオ', sans-serif
  height:100%
  -webkit-text-size-adjust: 100%;

#myCanvas
  width: 100%
  height: 100%
  padding:1em
  box-sizing: border-box

.note
  width: 100%
  height: 100%  
  padding-top:1em
  box-sizing: border-box
    
.postit
  background-color:white;
  border 1px solid silver;
  margin:0.5em
  padding:0.5em
  width:270px
  min-height:70px

.postit .pheader
  width:100%
  height:1em
  
.post-close
  color: white;
  font-size: 7px;
  font-weight:bold;
  border: 1px solid white;
  border-radius: 0.8em;
  width: 12px;
  height: 12px;
  background-color:gray;
  text-align:center
  float:right
  box-sizing: border-box
  
.item
  margin-top:0.3em
  margin-bottom:0.5em
  min-height:5em
  
.item .view
  width:100%
  white-space:pre-line;

.item .view a
  font-size:0.8em

.item.editing .view
  display:none

.item .editor
  display:none
  
.item.editing .editor
  display:block

.item.editing .editor textarea
  min-height:5em  
  
.pfooter
  width:100%

.pfooter button
  font-size:75%  
  